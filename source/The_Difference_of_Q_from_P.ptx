			<sidebyside widths="5% 5%" >
				<p>
					<m>f(x)</m>
				</p>
				<p>
					<m>g(x)</m>
				</p>
			</sidebyside>
			<sidebyside>
				<image source="f" width="40%"><description> The function f. </description></image>
				<image source="g" width="40%"><description> The function g. </description></image>
